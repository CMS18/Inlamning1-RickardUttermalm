@model AlmLabb.Models.ViewModels.TransferViewModel

@{
    ViewData["Title"] = "Index2";
}

<h1>Transfer</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Transfer" asp-action="Transfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FromAccountId" class="control-label"></label>
                <input asp-for="FromAccountId" class="form-control" />
                <span asp-validation-for="FromAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToAccountId" class="control-label"></label>
                <input asp-for="ToAccountId" class="form-control" />
                <span asp-validation-for="ToAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.Result != null)
{
        <div class="alert @(Model.Result.IsSuccessful ? "alert-success" : "alert-danger")" role="alert">
            <p>@Model.Result.Message</p>
        </div>
}

